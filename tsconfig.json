{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "bootstrap": [
        "dist/bootstrap"
      ],
      "bootstrap/*": [
        "dist/bootstrap/*"
      ],
      "ngbootstrap": [
        "dist/ngbootstrap"
      ],
      "ngbootstrap/*": [
        "dist/ngbootstrap/*"
      ],
      "bstrap": [
        "dist/bstrap"
      ],
      "bstrap/*": [
        "dist/bstrap/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}